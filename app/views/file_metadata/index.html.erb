<h1>Select file</h1>

<div class="card">
  <div class="card-body border">
    <%= form_tag(all_metadata_show_file_metadata_path, method: :get, class: 'p-1') do %>
      <div class="mb-3">
        <label class="mb-0" for="uuid">File</label>
        <%= select_tag(:uuid, options_from_collection_for_select(@files, :uuid, :original_filename), class: 'form-control') %>
      </div>

      <%= submit_tag 'Show all metadata', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
