<% flash.each do |key, value| %>
  <% if value.is_a? Array %>
    <% value.each do |element| %>
      <div class="<%= "#{flash_class(key) || ('alert alert-' + key)}" %>"
        <%= element %>
      </div>
    <% end %>
  <% else %>
    <div class="<%= "#{flash_class(key) || ('alert alert-' + key)}" %>" >
      <%= value %>
    </div>
  <% end %>
<% end %>
